<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coursework.gui.controllers.MenuController">
    <VBox alignment="CENTER" spacing="20">
        <Label text="WORDLE">
            <font>
                <Font size="48.0" />
            </font>
        </Label>
        
        <Button fx:id="playButton" text="Play" onAction="#handlePlayButton" style="-fx-font-size: 24px;" minWidth="200" />
        <Button fx:id="settingsButton" text="Settings" onAction="#handleSettingsButton" style="-fx-font-size: 24px;" minWidth="200" />
        <Button fx:id="exitButton" text="Exit" onAction="#handleExitButton" style="-fx-font-size: 24px;" minWidth="200" />
    </VBox>
    
    <Button fx:id="rulesButton" text="?" styleClass="round-button" StackPane.alignment="TOP_RIGHT">
        <StackPane.margin>
            <Insets top="10.0" right="10.0" />
        </StackPane.margin>
    </Button>
</StackPane>